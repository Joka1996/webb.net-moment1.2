@page
@model MinWebbplats.Pages.ContactModel
@{
    ViewData["Title"] = "Razor";
    var date = DateTime.Now;
    var today = DateTime.Today;

    //arrayyyy
    string[] courses = { "DT057G, Webbutveckling I", "DT093G, Webbutveckling II", "DT176G, Webbutveckling III", "DT084G, Introduktion till programmering i JavaScript", "DT163G, Digital bildbehandling för webb", "DT068G, Webbanvändbarhet", "DT003G, Databaser", "DT197G, Webbdesign för CMS", "IG021G, Projektledning", "DT162G, JavaScript-baserad webbutveckling", "DT071G, Programmering i C#.NET", "DT191G, Webbutveckling med .NET", "IG021G, Affärsplaner och kommersialisering" };
}

<h2>Razor</h2>
<h3>Information </h3>

<p> Datum/klockslag @date</p>
<br />
@if(today.DayOfWeek == DayOfWeek.Monday)
{
    <p>Idag är det måndag!</p>
} else
{
    <p>Idag är det inte måndag...</p>
}
<br />
<ul>
@foreach(var course in courses) {
    <li>@course</li>
}
</ul>